<%= render 'navbar'%>

<h1>Livros</h1>

<%=link_to "Cadastrar livro", new_book_path, class:'btn btn-primary'%><br>

<p><strong>Usuário logado:</strong> <%= current_user.email %></p>

<%= search_form_for @q do |f| %>
<%= f.label :name_count, 'Nome do Livro'%>
<%= f.search_field :name_cont%>
<%= f.submit 'Procurar'%>
<%=link_to "Limpar", books_path, class:'btn btn-primary'%><br>
<%end%> <br>


<table class="table table-striped table-bordered">
  <thead>
    <tr>
       <th scope="col">Nome do livro</th>
       <th scope="col">Categoria</th>
       <th scope="col">Nome do Autor </th>      
       <th scope="col">Data de Cadastro</th>
       <th scope="col">Ações</th>       
    </tr>
    </thead>
    
  <% @books.each do |book| %>


    <tbody>
    <tr>
      <td><%= book.name%></td>
      <td><%= book.category.categoriename %></td>
      <td><%= book.author %></td>      
      <td><%= book.created_at.strftime("%d/%m/%Y") %></td>
      <td>
      <div class="dropdown">
  <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
    Opções
  </a>
  <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
    <li><%= link_to "Visualizar", book, class:"dropdown-item"%></a></li>
    <li><%= link_to "Editar", edit_book_path(book), class:"dropdown-item" %></a></li>
    <li><%= link_to "Excluir", book_path(book), class:"dropdown-item", method: :delete, data:{confirm: "Deseja excluir este livro ? "} %></a></li>
  </ul>
      </td>
        
    </tr>
    </tbody>
  <%end%>
</table>


