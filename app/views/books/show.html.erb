<h3>Detalhes do Livro</h3><br>

<div class="card" style="width: 18rem;">
  
  <div class="card-header">
    <strong>Nome do Livro</strong>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item"><%= @book.name %></li>
  </ul>
  <div class="card-header">
    <strong>Nome do Autor</strong>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item"><%= @book.author %></li>
  </ul>
  <div class="card-header">
    <strong>Sinopsi</strong>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item"><%= @book.synopsis %></li>
  </ul>
  <div class="card-header">
    <strong>Data de Cadastro</strong>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item"><%= l(@book.created_at) %></li>
  </ul>
  <div class="card-header">
    <strong>Usu√°rio que cadastrou</strong>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item"><%= @book.created_by.try(:email)%></li>
  </ul>
</div>

